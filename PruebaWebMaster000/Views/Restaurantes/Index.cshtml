@model IEnumerable<PruebaWebMaster000.Models.Restaurantes>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.InformacionGeneral)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Logo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImagenItemDestacado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Calificacion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdHorariosNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.InformacionGeneral)
            </td>
            <td>
                <img width="100" src="@Url.Action("convertirImagen","Restaurantes",new { codigo = item.IdRestaurante, img = 1 })" />
            </td>
            <td>
                <img width="100" src="@Url.Action("convertirImagen1","Restaurantes",new { codigo1 = item.IdRestaurante, img = 1 })" />
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.IdHorariosNavigation.HorariosAtencion)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.Calificacion)
            </td>*@
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdRestaurante">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdRestaurante">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdRestaurante">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
