@model PruebaWebMaster000.Models.Restaurantes

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Restaurantes</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IdHorarios" class="control-label"></label>
                <select asp-for="IdHorarios" class ="form-control" asp-items="ViewBag.IdHorarios"></select>
            </div>
            <div class="form-group">
                <label asp-for="InformacionGeneral" class="control-label"></label>
                <input asp-for="InformacionGeneral" class="form-control" />
                <span asp-validation-for="InformacionGeneral" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Logo" class="control-label"></label>
                <input asp-for="ImagenLogo" class="form-control-file" name="imglogo" required="required" accept="image/*" />

            </div>
            <div class="form-group">
                <label asp-for="ImagenItemDestacado" class="control-label"></label>
                <input asp-for="ImagenDestacada" class="form-control-file" name="imgdestacada" required="required" accept="image/*" />
                
            </div>
            <div class="form-group">
                <label asp-for="Calificacion" class="control-label"></label>
                <input asp-for="Calificacion" class="form-control" disabled/>
                

            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
